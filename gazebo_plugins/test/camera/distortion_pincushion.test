<?xml version="1.0"?>
<launch>
  <arg name="gui" default="false" />

  <param name="/use_sim_time" value="true" />

  <node name="gazebo" pkg="gazebo_ros" type="gzserver"
      respawn="false"
      args="-r $(find gazebo_plugins)/test/camera/distortion_pincushion.world" />

  <group if="$(arg gui)">
    <node name="gazebo_gui" pkg="gazebo_ros" type="gzclient" respawn="false" />
  </group>

  <test test-name="distortion_test" pkg="gazebo_plugins"
      type="distortion_test" clear_params="true" time-limit="30.0" >
  </test>
</launch>
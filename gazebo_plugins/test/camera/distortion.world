<?xml version="1.0" ?>
<sdf version="1.4">
  <world name="default">

    <!-- Global light source -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Locate user camera at location of scene camera -->
    <gui fullscreen='0'>
      <camera name='user_camera'>
        <pose>0 0 2 0 1.5707 0</pose>
        <view_controller>orbit</view_controller>
      </camera>
    </gui>

    <!-- load a plane at the origin with the calibration pattern -->
    <include>
      <uri>model://calibration_plane</uri>
    </include>

    <!-- make a camera that looks directly at the plane -->
    <model name="camera">
      <static>true</static>
      <pose>0.0 0.0 3 0.0 1.5707 0.0</pose> <!-- set Z to to to have the checkerboard completely fill the frame. However, we don't want this because we want the edges of the checkerboard to be visible. -->
      <link name="camera_link">
        <pose>0 0 0 0 0 0</pose>
        <visual name="camera_visual">
          <geometry>
            <box>
              <size>0.1 0.1 0.1</size>
            </box>
          </geometry>
        </visual>
        <sensor type="camera" name="camera">
          <update_rate>0.5</update_rate>
          <camera name="head">
            <!-- attempt to make a 500x500 image that exactly captures the calibration pattern -->
            <horizontal_fov>0.927295218</horizontal_fov>
            <image>
              <width>1000</width>
              <height>1000</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.02</near>
              <far>300</far>
            </clip>
            <!-- No noise for this camera, we are only concerned with the distortion -->
            <distortion>
              <k1>0</k1>
              <k2>0</k2>
              <p1>0</p1>
              <p2>0</p2>
              <k3>0</k3>
              <center>0.5 0.5</center>
            </distortion>
          </camera>
          <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <alwaysOn>true</alwaysOn>
            <!-- Keep this zero, update_rate will control the frame rate -->
            <updateRate>0.0</updateRate>
            <cameraName>camera</cameraName>
            <imageTopicName>image_raw</imageTopicName>
            <cameraInfoTopicName>camera1_info</cameraInfoTopicName>
            <frameName>camera1_link</frameName>
            <hackBaseline>0.07</hackBaseline>

            <!-- These are the important parts -->
            <distortionK1>0</distortionK1>
            <distortionK2>0</distortionK2>
            <distortionT1>0</distortionT1>
            <distortionT2>0</distortionT2>
            <distortionK3>0</distortionK3>
          </plugin>
        </sensor>
      </link>
    </model>

